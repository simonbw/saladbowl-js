<form method="POST">
  <h1>Create a New Game</h1>
  <hr>
  <label>
    Words Per Player
    <input
      max="100"
      min="1"
      name="wordsPerPlayer"
      type="number"
      value="5"
    />
  </label>
  <label>
    Seconds Per Round
    <input
      max="200"
      min="5"
      name="secondsPerRound"
      type="number"
      value="60"
      step="5"
    />
  </label>
  <button type="submit" autofocus>Go</button>
  <a class="button" href="/">Back</a>
</form>